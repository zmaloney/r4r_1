<h1><%= @work.title %></h1>
<p>by <%= "#{@work.composer.first_name} #{@work.composer.last_name}"%></p>

<table>
	<tr>
		<th>Editor</th>
		<th>Publisher</th>
	</tr>
	<% @work.editions.each do |ed| %>
		<tr>
			<td>
				<%= link_to ed.description || "(no description)", 
					:controller 	=> "edition",
					:action			=> "show",
					:id				=> ed.id %>
			</td>
			<td> <%= ed.publisher %> </td>
		</tr>
	<% end %>
</table>
